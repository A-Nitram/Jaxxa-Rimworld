<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef Name="ApparelShieldBase" Class="Enhanced_Defence.PersonalShields.ThingDef_PersonalNannoShield" Abstract="True">
    <thingClass>Enhanced_Defence.PersonalShields.Apparel_PersonalNannoShield</thingClass>
    <eType>Apparel</eType>
    <category>Item</category>
    <description>A single-person directional energy shield device. It will attempt to stop any rapidly-moving projectile or energy attack that comes from a distance. It does nothing against melee attacks or shots from point-blank range. It does not prevents firing out, unlike common personal shield. </description>
    <graphicPath>Things/techShield</graphicPath>
    <graphicClass>Graphic_Single</graphicClass>
    <tickerType>Normal</tickerType>
    <selectable>True</selectable>
    <pathCost>10</pathCost>
    <useStandardHealth>True</useStandardHealth>
    <onGroundRandomRotateAngle>35</onGroundRandomRotateAngle>
    <drawGUIOverlay>true</drawGUIOverlay>
    <statBases>
      <MaxHealth>100</MaxHealth>
      <Flammability>1.0</Flammability>
      <DeteriorationRate>1</DeteriorationRate>
      <SellPriceFactor>0.5</SellPriceFactor>
    </statBases>
    <altitudeLayer>Item</altitudeLayer>
    <alwaysHaulable>True</alwaysHaulable>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <comps>
      <li>
        <compClass>CompForbiddable</compClass>
      </li>
      <li>
        <compClass>CompColorable</compClass>
      </li>
      <li>
        <compClass>CompQuality</compClass>
      </li>
    </comps>

    <maxDrawSize>1.60</maxDrawSize>
    <isRotating>false</isRotating>
    <soundBreak>TechShieldBroken</soundBreak>
    <soundReset>TechShieldReset</soundReset>

  </ThingDef>


  <ThingDef ParentName="ApparelShieldBase" Class="Enhanced_Defence.PersonalShields.ThingDef_PersonalNannoShield">
    <defName>Apparel_TechShield</defName>
    <label>class-1 tech shield</label>
    <bubbleGraphicPath>TechBubble</bubbleGraphicPath>
    <statBases>
      <MarketValue>1700</MarketValue>
      <PersonalShieldRechargeRate>0.06</PersonalShieldRechargeRate>
      <PersonalShieldEnergyMax>0.6</PersonalShieldEnergyMax>
    </statBases>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
      </bodyPartGroups>
      <layers>
        <li>Middle</li>
      </layers>
      <commonality>1</commonality>
      <tags>
        <li>Spacer</li>
        <li>Military</li>
      </tags>
    </apparel>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>10</weight>
          <only>RGBA(0.33,0.33,0.33,1)</only>
        </li>
        <li>
          <weight>10</weight>
          <only>RGBA(0.65,0.65,0.65,1)</only>
        </li>
        <li>
          <weight>6</weight>
          <min>RGBA(0.3,0.3,0.3,1)</min>
          <max>RGBA(0.5,0.5,0.5,1)</max>
        </li>
        <li>
          <weight>10</weight>
          <only>RGBA(0.9,0.9,0.9,1)</only>
        </li>
      </options>
    </colorGenerator>
  </ThingDef>

</Defs>