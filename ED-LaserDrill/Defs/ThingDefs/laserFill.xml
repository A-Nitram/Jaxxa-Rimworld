<?xml version="1.0" encoding="utf-8" ?>
<ThingDefs>

  <ThingDef Name="BuildingBase" Abstract="True">
    <category>Building</category>
    <soundImpactDefault>BulletImpactMetal</soundImpactDefault>
    <selectable>true</selectable>
    <drawerType>MapMeshAndRealTime</drawerType>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <repairEffect>Repair</repairEffect>
  </ThingDef>
  
   <ThingDef ParentName="BuildingBase">
    <defName>LaserFiller</defName>
    <eType>BuildingComplex</eType>
    <label>Laser Filler</label>
    <thingClass>Enhanced_Defence.Power.LaserDrill.Building_LaserFiller</thingClass>
	<researchPrerequisite>Research_LaserFiller</researchPrerequisite>
    <graphicPathSingle>Things/Buildings/LaserFiller</graphicPathSingle>
    <altitudeLayer>BuildingTall</altitudeLayer>
    <passability>Impassable</passability>
    <castEdgeShadows>true</castEdgeShadows>
    <fillPercent>1</fillPercent>
    <tickerType>Rare</tickerType>
    <statBases>
      <WorkToBuild>1800</WorkToBuild>
      <MaxHealth>350</MaxHealth>
      <Flammability>1.0</Flammability>
    </statBases>
    <description>Removes a SteamGeyser by filling it with rock and melting that rock with a laser to create a buildable surface.</description>
    <building>
      <wantsHopperAdjacent>false</wantsHopperAdjacent>
    </building>
    <comps>
      <li>
        <compClass>CompPowerTrader</compClass>
        <startElectricalFires>false</startElectricalFires>
        <basePowerConsumption>1200</basePowerConsumption>
      </li>
    </comps>
    <size>(4,4)</size>
    <costList>
      <Metal>100</Metal>
      <StoneBlocks>500</StoneBlocks>
    </costList>
    <overdraw>false</overdraw>
    <interactionSquareOffset>(0,0,0)</interactionSquareOffset>
    <hasInteractionSquare>false</hasInteractionSquare>
    <killedLeavings>
      <ChunkSlag>6</ChunkSlag>
     </killedLeavings>
    <filthLeavings>
      <SlagRubble>3</SlagRubble>
    </filthLeavings>
    <placementRestricters>
      <li>PlacementRestricter_OnSteamGeyser</li>
    </placementRestricters>
    <leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
    <terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
    <designationCategory>Power</designationCategory>
    <staticSunShadowHeight>0.75</staticSunShadowHeight>
  </ThingDef>


</ThingDefs>