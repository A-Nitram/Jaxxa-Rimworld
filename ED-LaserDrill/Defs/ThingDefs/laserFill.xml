<?xml version="1.0" encoding="utf-8" ?>
<ThingDefs>

  <ThingDef Name="BuildingBase" Abstract="True">
    <category>Building</category>
    <soundImpactDefault>BulletImpactMetal</soundImpactDefault>
    <selectable>true</selectable>
    <drawerType>MapMeshAndRealTime</drawerType>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <repairEffect>Repair</repairEffect>
    <leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
    <filthLeaving>BuildingRubble</filthLeaving>
  </ThingDef>
  
   <ThingDef ParentName="BuildingBase">
    <defName>LaserFiller</defName>
    <label>Laser Filler</label>
    <thingClass>Enhanced_Defence.Power.LaserDrill.Building_LaserFiller</thingClass>
	<researchPrerequisite>Research_LaserFiller</researchPrerequisite>
    <graphicPath>Things/Buildings/LaserFiller</graphicPath>
    <graphicClass>Graphic_Single</graphicClass>
    <altitudeLayer>BuildingTall</altitudeLayer>
    <passability>Impassable</passability>
    <castEdgeShadows>true</castEdgeShadows>
    <fillPercent>1</fillPercent>
    <tickerType>Rare</tickerType>
    <statBases>
      <WorkToMake>1800</WorkToMake>
      <MaxHitPoints>350</MaxHitPoints>
      <Flammability>1.0</Flammability>
    </statBases>
    <description>Removes a SteamGeyser by filling it with rock and melting that rock with a laser to create a buildable surface.</description>
    <building>
      <wantsHopperAdjacent>false</wantsHopperAdjacent>
    </building>
    <comps>
      <li>
        <compClass>CompPowerTrader</compClass>
        <startElectricalFires>false</startElectricalFires>
        <basePowerConsumption>1200</basePowerConsumption>
      </li>
    </comps>
    <size>(2,2)</size>
    <costList>
      <Steel>100</Steel>
    </costList>
    <costStuffCount>500</costStuffCount>
    <stuffCategories>
      <li>Stony</li>
    </stuffCategories>
    <graphicOverdraw>false</graphicOverdraw>
    <hasInteractionCell>False</hasInteractionCell>
    <placeWorkers>
      <li>PlaceWorker_OnSteamGeyser</li>
    </placeWorkers>
    <leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
    <terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
    <designationCategory>Power</designationCategory>
    <staticSunShadowHeight>0.75</staticSunShadowHeight>
  </ThingDef>


</ThingDefs>