<?xml version="1.0" encoding="utf-8" ?>
<ThingDefs>

  <ThingDef Name="BuildingBase" Abstract="True">
    <category>Building</category>
    <soundImpactDefault>BulletImpactMetal</soundImpactDefault>
    <selectable>true</selectable>
    <drawerType>MapMeshAndRealTime</drawerType>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <repairEffect>Repair</repairEffect>
  </ThingDef>
  
   <ThingDef Class="Enhanced_Defence.DropPod.OrbitalRelayThingDef" ParentName="BuildingBase">
    <defName>OrbitalCommand</defName>
    <eType>BuildingComplex</eType>
    <label>Orbital Command</label>
    <thingClass>Enhanced_Defence.DropPod.Building_OrbitalRelay</thingClass>
		<researchPrerequisite>OrbitalDropCommand</researchPrerequisite>
    <graphicPath>Things/Buildings/OrbitalCommand</graphicPath>
    <graphicClass>Graphic_Single</graphicClass>
    <altitudeLayer>BuildingTall</altitudeLayer>
    <passability>Impassable</passability>
    <castEdgeShadows>true</castEdgeShadows>
    <fillPercent>1</fillPercent>
    <tickerType>Rare</tickerType>
	<DropPodDeepStrike>true</DropPodDeepStrike>
	<DropPodAddUnits>true</DropPodAddUnits>
	<DropPodAddResources>true</DropPodAddResources>
	<DropPodAddUnitRadius>3</DropPodAddUnitRadius>
    <statBases>
      <WorkToMake>1800</WorkToMake>
      <MaxHealth>500</MaxHealth>
      <Flammability>1.0</Flammability>
    </statBases>
	<specialDisplayRadius>3</specialDisplayRadius>
    <description>Orbital Command.</description>
    <building>
      <wantsHopperAdjacent>true</wantsHopperAdjacent>
    </building>
    <comps>
      <li>
        <compClass>CompPowerTrader</compClass>
        <startElectricalFires>false</startElectricalFires>
        <basePowerConsumption>1000</basePowerConsumption>
      </li>
    </comps>
    <size>(3,3)</size>
    <costList>
      <Steel>500</Steel>
      <Uranium>20</Uranium>
    </costList>
    <graphicOverdraw>false</graphicOverdraw>
    <interactionSquareOffset>(0,0,0)</interactionSquareOffset>
    <hasInteractionCell>false</hasInteractionCell>
    <killedLeavings>
      <ChunkSlag>6</ChunkSlag>
     </killedLeavings>
    <filthLeavings>
      <SlagRubble>3</SlagRubble>
    </filthLeavings>
    <leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
    <terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
    <designationCategory>Security</designationCategory>
    <staticSunShadowHeight>0.75</staticSunShadowHeight>
  </ThingDef>  
  
